{
  "compilerOptions": {
    "outDir": "./static/built/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "include": [
    "./src/main/js/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelOptions": {
      "babelrc": false,
      /* Important line */
      "presets": [
        [
          "env",
          {
            "targets": "last 2 versions, ie >= 11",
            "modules": false
          }
        ]
      ]
    }
  }
}